Algoritmo ejercicio06_gonzalo
	Definir base, altura, area Como Real;
	Escribir "Por favor, introduzca la base del triángulo en cm";
	Leer base;
	Escribir "Por favor, introduzca la altura del triángulo en cm";
	Leer altura;
	area <- (base * altura)/2;
	Escribir "El área del triángulo es de: ", area, " cm2";
FinAlgoritmo
